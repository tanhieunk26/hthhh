  <!-- Script -->
  <script>
    // Đóng thông báo
    function closeAlert() {
      document.getElementById('alert').style.display = 'none';
    }

    // Tạo tuyết rơi
    const numberOfSnowflakes = 50; // Số lượng tuyết
    for (let i = 0; i < numberOfSnowflakes; i++) {
      let snowflake = document.createElement('div');
      snowflake.classList.add('snowflake');
      snowflake.innerHTML = '❄'; // Biểu tượng tuyết
      snowflake.style.left = Math.random() * 100 + 'vw'; // Đặt vị trí ngẫu nhiên
      snowflake.style.animationDuration = Math.random() * 5 + 3 + 's'; // Tốc độ rơi ngẫu nhiên
      snowflake.style.animationDelay = Math.random() * 5 + 's'; // Thời gian bắt đầu rơi ngẫu nhiên
      document.body.appendChild(snowflake);
    }
  </script>

